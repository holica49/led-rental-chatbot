{
  "name": "led-rental-mcp",
  "version": "1.0.0",
  "description": "MCP server for LED rental/installation chatbot with Kakao, Notion, and Excel integration",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "led-rental-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "start:mcp": "node dist/index.js",
    "railway-start": "node dist/server.js",
    "postinstall": "echo 'Dependencies installed'",
    "start:prod": "npm run build && node dist/index.js",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:lineworks": "tsx src/test-lineworks-auth.ts",
    "test:lineworks-notify": "tsx src/test-lineworks-notification.ts"
  },
  "keywords": [
    "mcp",
    "led",
    "rental",
    "chatbot",
    "kakao",
    "notion",
    "excel"
  ],
  "author": "허지성",
  "license": "오리온디스플레이",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.16.0",
    "@notionhq/client": "^2.3.0",
    "axios": "^1.11.0",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "typescript": "^5.7.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.17.9",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/holica49/led-rental-mcp.git"
  }
}
